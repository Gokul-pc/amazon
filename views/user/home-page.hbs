<body class="bground mt-5">

  <div class="container">
    <div class="product-items">

      <div class="product " style="  margin-left: -5rem; margin-right: -5rem;">
        <div class="row">
          {{#each products}}
          <div class="product-content col-md-3 p-2 ">
            <div class="card card1 mx-auto mt-5">
              <div class="product-img">
                <img src="/product-images/{{this._id}}.png" alt="product image">
              </div>



              <div class="product-info">
                <div class="product-info-top">
                  <a href="#" class="product-name">{{this.name}}</a>

                  <div class="rating">
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="fas fa-star"></i></span>
                    <span><i class="far fa-star"></i></span>
                  </div>
                </div>
                <h2 class="sm-title">{{this.description}}</h2>


                <p class="product-price"> &#x20B9; {{this.price}}</p>
              </div>
              <div class="product-btns">
                <button type="button" class="btn-cart" onclick="addToCart('{{this._id}}')"> add to cart

                </button>
                <button type="button" class="btn-buy"> buy now
                  <span><i class="fas fa-shopping-cart"></i></span>
                </button>
              </div>

{{!-- 
              <div class="off-info">
                <h2 class="sm-title">25% off</h2>
              </div> --}}
            </div>

          </div>

          {{/each}}
        </div>

      </div>
    </div>

